{
    "compilerOptions": {
      "sourceMap": true,
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es2015",
      "target": "es2015",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports":true,
      "declaration": true,
      "declarationDir": "dist/types",
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
    ]
  }